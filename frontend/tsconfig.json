{
  "extends": "../tsconfig.json",
  "composite": true,
  "include": ["src/**/*", "src/i18n/*.json"],
  "compilerOptions": {
    "composite": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
